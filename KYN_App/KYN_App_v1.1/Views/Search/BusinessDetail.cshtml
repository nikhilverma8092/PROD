                    {
                        <a href="/Ghaziabad/Crossings/@Model.Category.CategoryName/@Model.SubCategory.SubCategoryName/@item.ID">@item.DetailedCategoryName</a> <span>-</span>
                    }
                </span>
            </div>
        </div>

        <a href="/Ghaziabad/Crossings/@Model.Category.CategoryName/@Model.SubCategory.SubCategoryName/@Model.Name.Replace(' ', '-').Replace('&','-')/@Model.ID/Gallery"
