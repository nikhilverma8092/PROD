        <div>

            @{
                foreach (var item in Model.Categories)
                {
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="small card horizontal" style="background-color:#edda74">
                            <div class="card-image">
                                <img src="~/Images/Category/@item.BusinessCategory.ImageUrl" alt="No Image" />
                            </div>
                            <div class="card-stacked">
                                <div class="card-title col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <p>@item.BusinessCategory.CategoryName</p>
                                </div>
                                <div class="card-stacked">
                                    @{
                                        int _count = 0;
                                        foreach (var subCategory in @item.SubCategories)
                                        {
                                            if (_count >= 3)
                                            {
                                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                    @Html.ActionLink("More...", "GetMoreSubCategories", "Search", new { categoryID = @item.BusinessCategory.ID }, null)
                                                </div>
                                                break;
                                            }
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                @Html.ActionLink(@subCategory.SubCategoryName, "SearchBusinessDetailBySubCategory", "Search", new { subCategoryID = @subCategory.ID }, null)
                                            </div>
                                            _count++;
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                                        }
            }
        </div>
    </div>
</body>
