@model IEnumerable<KYN_App_v1._1.Models.BusinessSubCategoryViewModel>

@{
    ViewBag.Title = "SearchCategoryResult";
}

<h2>Category Results</h2>

<link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
<link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link type="text/css" rel="stylesheet" href="~/External_Control/materialize/css/materialize.css" media="screen,projection" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="~/External_Control/materialize/js/materialize.min.js"></script>


@{
    foreach (var item in Model)
    {
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card small horizontal" style="background-color:#edda74">
                <div class="card-image">
                    <img src="~/Images/SubCategory_Images/@item.ImagePath" alt="No Image" />
                </div>
                <div class="card-stacked">
                    <div class="card-title col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        @Html.ActionLink(@item.SubCategoryName, "SearchBusinessDetailBySubCategory", "Search", new { subCategoryName = @item.SubCategoryName }, null)
                    </div>                    
                </div>
            </div>
        </div>
    }
}