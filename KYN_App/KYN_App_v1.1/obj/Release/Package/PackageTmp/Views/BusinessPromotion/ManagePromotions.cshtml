@model KYN_App_v1.Models.ManagePromotionViewModel

@{
    ViewBag.Title = "ManagePromotions"; 
    var grid = new WebGrid(Model.PromotionDetailEntity);
}

<h2>Manage Promotions</h2>

<div id="gridContent" style=" padding:20px; ">
    @grid.GetHtml(
            tableStyle: "webgrid-table",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            mode: WebGridPagerModes.All,
            columns:
                grid.Columns(
                grid.Column("ID", "ID", format: @<text>@item.ID</text>, style: "col1Width"),
                grid.Column("InitialQuantity", "InitialQuantity", format: @<text>@item.InitialQuantity</text>, style: "col1Width"),
                grid.Column("StillLeftQuantity", "StillLeftQuantity", format: @<text>@item.StillLeftQuantity</text>, style: "col1Width"),
                grid.Column("ValueType", "ValueType", format: @<text>@item.ValueType</text>, style: "col1Width"),
    @*grid.Column("AddresssType", "Address Type", format:@<text>@item.AddressTypeName</text>, style: "col1Width"),
        grid.Column("Building_Name", "Building Name", format:@<text>@item.BuildingName</text>, style: "col1Width"),*@
    @*grid.Column("Type", format: @<text>  <span class="display-mode">@item.CostCenterID </span> <label id="UserID" class="edit-mode">@item.CostCenterID</label> </text>, style: "col1Width" ),
        grid.Column("Name", "Name", format: @<text>  <span class="display-mode"> <label id="lblName">@item.Name</label> </span> <input type="text" id="Name" value="@item.Name" class="edit-mode" /></text>, style: "col2Width"),*@
 grid.Column("Action", format: @<text>
        @*@Html.ActionLink("Add New Business", "CreateBusinessDetail", null, new { @class = "btn btn-lg btn-facebook btn-block" })*@
        @Html.ActionLink("Edit Detail", "UpdateBusinessDetail", "BusinessPromotion", new { businessDetailID = @item.ID }, null)
</text>, style: "col1Width", canSort: false),

    grid.Column("Action", format: @<text>
        @*@Html.ActionLink("Add New Business", "CreateBusinessDetail", null, new { @class = "btn btn-lg btn-facebook btn-block" })*@
        @Html.ActionLink("Delete Promotions", "ManagePromotions", "BusinessPromotion", new { businessDetailID = @Model.BusinessDetailID }, null)
    </text>, style: "col1Width", canSort: false),

    grid.Column("Action", format: @<text>
    @*@Html.ActionLink("Add New Business", "CreateBusinessDetail", null, new { @class = "btn btn-lg btn-facebook btn-block" })*@
    @Html.ActionLink("Manage Coupons", "ManageCoupon", "BusinessPromotion", new { _promotionDetailID = @item.ID }, null)
    </text>, style: "col1Width", canSort: false)
                                          ))
</div>

<div>
    <div class="row">
        <div>
            @Html.ActionLink("Add New Promotion", "CreatePromotionDetail", "BusinessPromotion", new { businessDetailID = @Model.BusinessDetailID }, null)
        </div>
        <div>
            @Html.ActionLink("Go Back To Update Business", "Index", "Business", null, null)
        </div>
    </div>
</div>


