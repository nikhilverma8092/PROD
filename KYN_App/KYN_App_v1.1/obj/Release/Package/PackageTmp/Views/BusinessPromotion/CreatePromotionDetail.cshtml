@model KYN_App_v1.Models.CreateBusinessPromotionViewModel

@{
    ViewBag.Title = "CreatePromotionDetail";
}

<h2 class="panel-heading">Create Promotions<small>It's free!</small> </h2>


@using (Html.BeginForm("CreatePromotionDetail", "BusinessPromotion", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="well">Promotion Type...</h3>
                </div>
                @Html.HiddenFor(model => model.PromotionDetailViewModel.CategoryID)
                @Html.HiddenFor(model => model.PromotionDetailViewModel.SubCategoryID)
                @Html.HiddenFor(model => model.PromotionDetailViewModel.RegionID)
                @Html.HiddenFor(model => model.PromotionDetailViewModel.BusinessPrimaryDetailID)
                @Html.HiddenFor(model => model.PromotionDetailViewModel.BusinessPrimaryDetailName)

                <div class="panel-body">
                    <div class="row">
                        <div class="form-group col-xs-12 col-sm-12 col-md-10">
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <div class="form-group">
                                    @Html.DropDownListFor(m => m.PromotionDetailViewModel.PromotionTypeID, new SelectList(Model.PromotionTypes, "ID", "PromotionTypeName"), "Select Promotion Type", new { @id = "ddlPromotionType", @class = "dropdown-toggle" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="form-group col-xs-12 col-sm-12 col-md-10">
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <div class="form-group">
                                    @Html.DropDownListFor(m => m.PromotionDetailViewModel.ValueType, new SelectList(Model.PromotionValueTypes, "ID", "ValueTypeName"), "Select Promotion Value Type", new { @id = "ddlPromotionValueType", @class = "dropdown-toggle" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel-heading">
                    <h3 class="well">Business Basic Information...</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PromotionDetailViewModel.PromotionDetailName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PromotionDetailViewModel.PromotionDetailName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PromotionDetailViewModel.PromotionStartDate, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.PromotionDetailViewModel.PromotionStartDate, "{0:MM/dd/yyyy}", new { @class = "form-control", type = "date", placeholder = "MM/DD/YYYY", maxlength = "100", tooltip = "SOME TEXT" })
                            @Html.ValidationMessageFor(m => m.PromotionDetailViewModel.PromotionStartDate)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PromotionDetailViewModel.PromotionEndDate, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.PromotionDetailViewModel.PromotionEndDate, "{0:MM/dd/yyyy}", new { @class = "form-control", type = "date", placeholder = "MM/DD/YYYY", maxlength = "100", tooltip = "SOME TEXT" })
                            @Html.ValidationMessageFor(m => m.PromotionDetailViewModel.PromotionEndDate)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PromotionDetailViewModel.InitialQuantity, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PromotionDetailViewModel.InitialQuantity, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    @*<div class="form-group">
                            @Html.LabelFor(model => model.PromotionDetailViewModel.CouponTotalValue, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PromotionDetailViewModel.CouponTotalValue, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>*@
                    <div class="form-group">
                        @Html.LabelFor(model => model.PromotionDetailViewModel.PerCouponTotalValue, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PromotionDetailViewModel.PerCouponTotalValue, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    @*<div class="form-group">
                            @Html.LabelFor(model => model.PromotionDetailViewModel.CouponValidFor, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PromotionDetailViewModel.CouponValidFor, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>*@


                    <div class="form-group">
                        @Html.DropDownListFor(m => m.PromotionDetailViewModel.CouponValidFor, new SelectList(Model.PromotionCouponValidFor, "ValidForInt", "CouponValidFor"), "Generated Promotion Type Valid For", new { @id = "ddlPromotionCouponValidFor", @class = "dropdown-toggle" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PromotionDetailViewModel.PerUserAllowedCoupons, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PromotionDetailViewModel.PerUserAllowedCoupons, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PromotionDetailViewModel.PromotionDetails, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PromotionDetailViewModel.PromotionDetails, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" class="btn btn-default form-control" value="Create Promotion Detail" />
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
